{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "checkJs": false,
    "types": [
        "node",
        "jest"
    ],
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules"],
}
